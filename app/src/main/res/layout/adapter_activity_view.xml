<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_viewact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_journey_cardview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_journey_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="10dp"
                    android:src="@drawable/time" />

                <TextView
                    android:id="@+id/tv_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/iv_journey_img"
                    android:layout_toRightOf="@+id/iv_journey_img"
                    android:text="2017-09-15"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tv_journey_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/iv_journey_img"
                    android:layout_below="@+id/iv_journey_img"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:text="行程消费" />

                <TextView
                    android:id="@+id/tv_vafee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_journey_tv"
                    android:layout_below="@+id/iv_journey_img"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tv_journey_tv"
                    android:text="¥0.0"
                    android:textColor="#f4ea2a"
                    android:textSize="22dp" />

                <ImageView
                    android:id="@+id/iv_journey_arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow_right" />

                <TextView
                    android:id="@+id/tv_valocknum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_journey_tv"
                    android:layout_toLeftOf="@id/iv_journey_arrow"
                    android:text="30163927" />

                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignBottom="@+id/tv_journey_tv"-->
                    <!--android:layout_toLeftOf="@id/tv_journey_num"-->
                    <!--android:text="lock:" />-->
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</LinearLayout>
