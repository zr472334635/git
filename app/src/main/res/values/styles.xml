<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- 自定义标题栏 parent="android:Theme" 这个属性必须写 -->
    <style name="mytitlestyle" parent="android:Theme.Light">
        <!-- 设置高度，和 mytitlebar.xml中保持一致 -->
        <item name="android:windowTitleSize">50dp</item>
        <!-- 设置内填充为0 使自定义标题填充整个标题栏，否则左右两边有空隙 -->
        <item name="android:padding">0dp</item>

    </style>



    <!--自定义dialog背景全透明无边框theme -->
    <style name="MyDialog" parent="android:style/Theme.Holo.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>




</resources>

